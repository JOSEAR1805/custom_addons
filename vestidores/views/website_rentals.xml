<odoo>
	<data>
		<template id="page_rentals" name="Citas para Hoy">
			<t t-call="website.layout">
				<div class="container">
					<h3 class="page-header mt16"> Citas para Hoy </h3>
					<table class="table table-striped table-condensed" style="background-color:white;">
						<tr name="table-header">
							<th class="text-left">Cliente</th>
							<th class="text-left">Modista</th>
							<th class="text-left">Vestido</th>
							<th class="text-left">Tipo</th>
							<th></th>
						</tr>
						<tr t-foreach="sale_rentals" t-as="sale_rental">
							<td>
								<span class='name' t-esc="sale_rental.partner_id.name"/>
							</td>
							<td>
								<span t-esc="sale_rental.modista.name"/>

							</td>
							<td>
								<span t-esc="sale_rental.rental_product_id.name"/>

							</td>
							<td>
								<span t-esc="sale_rental.tipo_cita"/>
							</td>
							<td>
								<form action="" method="post" t-att-id="sale_rental.id">
									<input type="hidden" name="cliente_id" t-att-value="sale_rental.partner_id.id" />
									<input type="hidden" name="cliente_nombre" t-att-value="sale_rental.partner_id.name" />
									<input type="hidden" name="producto_ids" t-att-value="sale_rental.rental_product_id.id" />
									<input type="hidden" name="sale_rental_id" t-att-value="sale_rental.id" />
									<!-- <input type="hidden" name="redirect_to" value="/rentals"/> -->
									<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
									<button class="btn btn-primary pull-right onSubmitRentals" type="button" name="sale_rental_id" t-att-value="sale_rental.id">
										<span>Asignar Cola</span>
									</button>
								</form>
							</td>
						</tr>
					</table>
				</div>
			</t>
		</template>
	</data>
</odoo>
